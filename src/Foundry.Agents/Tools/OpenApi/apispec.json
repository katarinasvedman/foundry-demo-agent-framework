{
  "openapi": "3.0.1",
  "info": {
    "title": "External Signals API",
    "version": "1.3.0"
  },
    "servers": [
    {
      "url": "https://remote-data.azurewebsites.net/api"
    }
  ],
  "paths": {
    "/price/dayahead": {
      "get": {
        "operationId": "DayAheadPrice",
        "summary": "Get day-ahead electricity prices (SEK/kWh) for 24 hours (zone=SE3 only)",
        "parameters": [
          {
            "name": "zone",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "date",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DayAheadPriceResponse"
                },
                "example": {
                  "zone": "SE3",
                  "date": "2025-09-15",
                  "unit": "SEK/kWh",
                  "values": [
                    0.65,
                    0.685,
                    0.72,
                    0.754,
                    0.789,
                    0.824,
                    0.859,
                    0.893,
                    0.928,
                    0.963,
                    0.998,
                    1.033,
                    1.067,
                    1.102,
                    1.137,
                    1.172,
                    1.207,
                    1.241,
                    1.276,
                    1.311,
                    1.346,
                    1.38,
                    1.415,
                    1.45
                  ]
                }
              }
            }
          }
        }
      }
    },
